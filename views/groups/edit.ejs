<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center" style="color:white;">Edit group</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow py-3 px-2">
                <form action="/groups/<%= group._id %>?_method=PUT " method="POST" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id='title' name="group[title]" value="<%= group.title%>"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Change image</label>
                        <input type="file" name="image" id="image" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id='description' name="group[description]"
                            required><%=group.description%></textarea>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-info">Update Group</button>
                    </div>

                </form>
                <a href="/groups/<%= group._id%>">Back to group</a>
            </div>
        </div>
    </div>
    <div class="row">
        <h1 class="text-center"style="color:white;">Add members to <%= group.title%>
        </h1>
        <div class="card shadow py-3 px-2">
        <div class="col-6 offset-3">
            <form action="/groups/<%= group._id %>?_method=PUT" method="POST">
            <div class="container" id="searchContainer">
                <div class="input-group" id="searchWrapper">
                    <input type="search" id="searchBar" class="form-control rounded"
                        placeholder="Search  for a user" aria-label="Search" aria-describedby="search-addon" />
                    <button type="button" class="btn btn-outline-primary">search</button>
                </div>
                <ul id="userList"></ul>
            </div>
                <input class="form-control" type="text" id='members' name="group[members]" value="<%= group.members%>" style="display:none">
                <button class="btn btn-success" id="addUser">Add user <span class="fa fa-user-plus"></span></button>
            </form> 

            <a href="/groups/<%= group._id%>">Back to group</a>
        </div>
    </div>
</div>