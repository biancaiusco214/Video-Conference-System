<% layout('layouts/boilerplate')%>
    <h1 style="color:white;">My Groups</h1>

    <% for(let group of groups){ let memberFlag=false;%>
        <% for(let j of group.members) { 
            if(currentUser._id.equals(j._id)) 
                memberFlag=true; 
            } 
            if(memberFlag===true){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=group.image.url%>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= group.title%>
                            </h5>
                            <p class="card-text">
                                <%= group.description %>
                            </p>
                            <a class="btn btn-primary" href="/groups/<%=group.id%>">View <%= group.title %> </a>
                        </div>

                    </div>
                </div>
            </div>
            <% } %>
                <% } %>